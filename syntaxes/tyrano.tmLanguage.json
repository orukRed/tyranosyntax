{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "tyranoscript",
	"patterns": [
		{
			"include": "#tyrano_variables"
		},
		{
			"include": "#iscript1"
		},
		{
			"include": "#iscript2"
		},		
		{
			"include": "#strings"
		},
		{
			"include":"#constant"
		},
		{
			"include": "#comment_line"
		},
		{
			"include": "#comment_block"
		},
		{
			"include": "#tyrano_symbols"
		},	
	
		{
			"include": "#tyrano_labels"
		},		
		{
			"include": "#tyrano_sharp"
		},

		{
			"include": "#tyrano_tags1"
		},
		{
			"include": "#tyrano_tags2"
		},
		{
			"include": "#numbers"
		}
	],
	"repository": {
		"iscript1":{
			"begin":"\\s*(\\[)((?i:iscript))(\\])",
			"beginCaptures": {
				"1":{
					"name":"keyword.operator.tyrano"
				},
				"2":{
					"name":"support.class.tyrano"
				},
				"3":{
					"name":"keyword.operator.tyrano"
				}
			},

			"end": "\\s*(\\[)((?i:endscript))\\s*((\\S*)=(\\S*))*(\\])",
			"endCaptures": {
				"1":{
					"name":"keyword.operator.tyrano"
				},
				"2":{
					"name":"support.class.tyrano"
				},
				"4":{
					"name":"support.function.tyrano"
				},
				"5":{
					"name":"string.quoted.double.tyrano"
				},
				"6":{
					"name":"keyword.operator.tyrano"
				}
			},
			"patterns":[
				{
					"patterns": [
						{
							"name": "meta.embedded.block.js",
							"contentName": "source.js",
							"patterns": [
								{
									"include": "source.js"
								},
								{
									"name":"variable.other",
									"match":"\\b(f\\.|sf\\.|tf\\.)\\w*\\b"
								},
								{
									"name": "support.function",
									"match": "\\b(TYRANO|kag|ftag|startTag|TG|config)\\b"
								}
							]					
						}
		
					]
				}
			]
		},
		"iscript2":{
			"begin":"(@)((?i:iscript))",
			"beginCaptures": {
				"1":{
					"name":"keyword.operator.tyrano"
				},
				"2":{
					"name":"support.class.tyrano"
				}
			},
			"end": "(@)((?i:endscript))\\s*((\\S*)=(\\S*))*",
			"endCaptures": {
				"1":{
					"name":"keyword.operator.tyrano"
				},
				"2":{
					"name":"support.class.tyrano"
				},
				"4":{
					"name":"support.function.tyrano"
				},
				"5":{
					"name":"string.quoted.double.tyrano"
				}
			},
			"patterns":[
				{
					"patterns": [
						{
							"name": "meta.embedded.block.js",
							"contentName": "source.js",
							"patterns": [
								{
									"include": "source.js"
								},
								{
									"name":"variable.other",
									"match":"\\b(f\\.|sf\\.|tf\\.)\\w*\\b"
								},
								{
									"name": "support.function",
									"match": "\\b(TYRANO|kag|ftag|startTag|TG|config)\\b"
								}
							]					
						}
		
					]
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.tyrano",
			"begin":"\"",
			"end":"\"",
			"patterns": [
				{
					"name": "constant.character.escape.tyrano",
					"match": "\\\\."
				}
			]
		},

		"constant":{
			"name": "constant.language.tyrano",
			"match": "\\b(true|false|null)\\b"
		},

		"comment_line":{
			"name": "comment.line.tyrano",
			"match": "^;.*"
		},
		"comment_block":{
			"name": "comment.block.tyrano",
			"begin":"\\/\\*",
			"end":"\\*\\/"
		},
		"tyrano_symbols":{
			"name":"keyword.operator",
			"match":"(\\[|\\]|@)"
		},
		"tyrano_labels":{
			"name":"keyword.other",
			"match":"^\\*.*"
		},
		"tyrano_sharp":{
			"name":"variable.language",
			"match":"^#.*"
		},		
		"tyrano_variables":{
			"name":"variable.other",
			"match":"\\b(f\\.|sf\\.|tf\\.)\\w*\\b"
		},
